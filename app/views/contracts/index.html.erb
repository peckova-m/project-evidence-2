<article>
  <p style="color: green"><%= notice %></p>
  <header>
    <h1>Pojistné smlouvy</h1>
    <div id="box">
      <%= link_to "Nová Smlouva", new_contract_path, class: "button", id:"zeleny" %>
    </div>
  </header>
  
  <section>
    <table>
      <thead>
        <th>Pojištěný</th>
        <th>Pojištění</th>
        <th>Měsíční částka v kč</th></td>
        <th>Akce</th>
      </thead>
  
      <tbody>
        <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.policyholder_name %>, <%= contract.policyholder_birthdate%></td>
          <td><%= contract.policy_title %></td>
          <td class="tdright"><%= contract.monthly_amount %></td>
          <td>
            <div id="box">
            <%= button_to "Odstranit", contract, method: :delete, class:"button", id:"cerveny" %>
            <%= link_to "Upravit", edit_contract_path(contract), class:"button", id:"zeleny" %>
            <%= link_to "Zobrazit", contract, class:"button", id:"zeleny" %>  
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</article>